package Face;

import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.Connection;
import java.sql.SQLException;
import java.sql.Statement;


public class Test {
	public static void main(String[] args) {
		try {
			Class.forName("sun.jdbc.odbc.JdbcOdbcDriver");
			String url = "jdbc:odbc:zxy";//databaseName就是刚刚添加的数据源名称
			Connection con = DriverManager.getConnection(url, "", "");//没有用户名和密码的时候直接为空
			Statement sta = con.createStatement();
			ResultSet rst = sta.executeQuery("select * from demoTable");//demoTable为access数据库中的一个表名
			if(rst.next()){
				System.out.println(rst.getString("password"));
				//解决乱码问题System.out.println(new String(rst.getBytes("name"), "gbk"));
			}
		} catch (ClassNotFoundException e) {
			e.printStackTrace();
		} catch (SQLException e) {
			e.printStackTrace();
		} /*catch (UnsupportedEncodingException e) {
			e.printStackTrace();
		}*/
	}
}
